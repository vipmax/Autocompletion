    <SplitPane dividerPositions="0.2725752508361204" focusTraversable="true" prefHeight="160.0" prefWidth="200.0">
      <items>
        <AnchorPane maxWidth="-1.0" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
          <children>
            <TreeView fx:id="treeView" onMouseClicked="#onClicked" prefHeight="374.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
